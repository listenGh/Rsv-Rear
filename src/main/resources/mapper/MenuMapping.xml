<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--        column 对应（数据库中的列名） property （Bean的属性）-->

<mapper namespace="com.gh.rsv.Dao.MenuDao">
    <resultMap id="MenuMap" type="com.gh.rsv.bean.MainMenu">
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <collection property="subMenuList" ofType="com.gh.rsv.bean.SubMenu">
            <id column="sid" property="id"></id>
            <result column="stitle" property="title"></result>
            <result column="spath" property="path"></result>
        </collection>
    </resultMap>
    <select id="getMainMennu" resultMap="MenuMap">
        select mm.*,sm.id as sid,sm.title as stitle,sm.path as spath
        from Mainmenu mm,Submenu sm where mm.id = sm.mid and sm.admin = 1
    </select>

    <select id="getMainMennuOfStudent" resultMap="MenuMap">
        select mm.*,sm.id as sid,sm.title as stitle,sm.path as spath
        from Mainmenu mm,Submenu sm where mm.id = sm.mid and sm.student = 1
    </select>

    <select id="getMainMennuOfTeacher" resultMap="MenuMap">
        select mm.*,sm.id as sid,sm.title as stitle,sm.path as spath
        from Mainmenu mm,Submenu sm where mm.id = sm.mid and sm.teacher = 1
    </select>
</mapper>